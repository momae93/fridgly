<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="8dp"
                                        app:cardElevation="0dp"
                                        android:id="@+id/item_recipe_ingredient_extended_cardView_container"
                                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                                        android:layout_marginBottom="8dp"
                                        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
                android:id="@+id/item_recipe_ingredient_extended_imageView_photo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.v7.widget.CardView>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_recipe_ingredient_extended_textView_ingredient"
            app:layout_constraintStart_toEndOf="@+id/item_recipe_ingredient_extended_cardView_container"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/item_recipe_ingredient_extended_cardView_container"
            app:layout_constraintBottom_toBottomOf="@+id/item_recipe_ingredient_extended_cardView_container"
            android:textColor="@color/colorBlack"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_recipe_ingredient_extended_textView_quantity"
            app:layout_constraintStart_toEndOf="@+id/item_recipe_ingredient_extended_textView_ingredient"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textStyle="bold" app:layout_constraintHorizontal_bias="1.0" android:textColor="@color/colorBlack"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/item_recipe_ingredient_extended_textView_unit" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_recipe_ingredient_extended_textView_unit"
            app:layout_constraintTop_toBottomOf="@+id/item_recipe_ingredient_extended_textView_quantity"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/item_recipe_ingredient_extended_textView_ingredient"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent" android:textStyle="italic"
            android:layout_marginBottom="8dp" android:textColor="@color/colorBlack"/>
</android.support.constraint.ConstraintLayout>