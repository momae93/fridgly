<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent" android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".presentation.views.usecases.search.fragment.FragmentSearch">
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_search_textView_name"
            android:elevation="10dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toStartOf="@+id/fragment_search_cardView_container"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_search_cardView_container"
            android:layout_marginBottom="8dp" android:textStyle="bold"
            android:textSize="16dp" app:layout_constraintEnd_toEndOf="@+id/fragment_search_cardView_container"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <android.support.v7.widget.SearchView
                android:id="@+id/fragment_search_searchView_search"
                android:theme="@style/SearchViewTheme"
                android:layout_width="0dp"
                android:background="@drawable/shape_round_grey"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp">
        </android.support.v7.widget.SearchView>
    <android.support.v7.widget.CardView android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/fragment_search_cardView_container"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        android:layout_marginEnd="8dp"
                                        android:layout_marginTop="8dp"
                                        app:cardCornerRadius="8dp"
                                        app:cardElevation="0dp"
                                        app:cardBackgroundColor="@android:color/transparent"
                                        app:layout_constraintTop_toBottomOf="@+id/fragment_search_searchView_search"
                                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp">
        <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/fragment_search_imageView_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_search_searchView_search"
                android:layout_height="200dp"/>

    </android.support.v7.widget.CardView>

    <TextView
            android:text="You may want to try"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_search_textView_other"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:maxLines="2"
            app:layout_constraintTop_toBottomOf="@+id/fragment_search_cardView_container"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fragment_search_textView_other"
            android:id="@+id/fragment_search_recyclerView_thumbnails"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>
</ScrollView>
