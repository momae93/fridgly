<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="8dp"
                                        app:cardElevation="0dp"
                                        android:id="@+id/item_recipe_thumbnail_grid_cardView_container"
                                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp">
        <ImageView
                android:id="@+id/item_recipe_thumbnail_grid_imageView_photo"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.v7.widget.CardView>

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_recipe_thumbnail_grid_textView_name"
            android:maxLines="10"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/colorBlack"
            android:textAlignment="center" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/item_recipe_thumbnail_grid_cardView_container"
            app:layout_constraintEnd_toEndOf="@+id/item_recipe_thumbnail_grid_cardView_container"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/item_recipe_thumbnail_grid_cardView_container"/>
</android.support.constraint.ConstraintLayout>